+                        break;
+                    case "shipwreck":
+                        seed = conf.shipwreckSeed;
+                        break;
+                    case "swamp_hut":
+                        seed = conf.swampSeed;
+                        break;
+                    case "village":
+                        seed = conf.villageSeed;
+                        break;
+                }
+
+                updated.put(entry.getKey(), new StructureSettingsFeature(feature.a(), feature.b(), seed));
+            }
+
+            original.clear();
+            original.putAll(updated);
+            injected = true;
+        }
